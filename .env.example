# HTTP Client Configuration
# Copy this to .env and fill in your values

# Base URL
HTTP_CLIENT_BASE_URL=https://api.example.com

# Timeouts (seconds)
HTTP_CLIENT_TIMEOUT_CONNECT=5.0
HTTP_CLIENT_TIMEOUT_READ=10.0
HTTP_CLIENT_TIMEOUT_TOTAL=30.0

# Retry configuration
HTTP_CLIENT_RETRY_MAX_ATTEMPTS=3
HTTP_CLIENT_RETRY_BACKOFF_FACTOR=2.0
HTTP_CLIENT_RETRY_BACKOFF_JITTER=true
HTTP_CLIENT_RETRY_BACKOFF_MAX=60.0

# Security
HTTP_CLIENT_SECURITY_VERIFY_SSL=true
HTTP_CLIENT_SECURITY_MAX_RESPONSE_SIZE=104857600  # 100MB
HTTP_CLIENT_SECURITY_MAX_DECOMPRESSED_SIZE=524288000  # 500MB

# Connection pool
HTTP_CLIENT_POOL_CONNECTIONS=10
HTTP_CLIENT_POOL_MAXSIZE=10
HTTP_CLIENT_POOL_MAX_REDIRECTS=5

# Logging
HTTP_CLIENT_LOG_LEVEL=INFO
HTTP_CLIENT_LOG_FORMAT=text
HTTP_CLIENT_LOG_ENABLE_CONSOLE=true
HTTP_CLIENT_LOG_ENABLE_FILE=false
# HTTP_CLIENT_LOG_FILE_PATH=/var/log/http_client.log
HTTP_CLIENT_LOG_MAX_BYTES=10485760  # 10MB
HTTP_CLIENT_LOG_BACKUP_COUNT=5
HTTP_CLIENT_LOG_ENABLE_CORRELATION_ID=true

# Authentication (KEEP SECRET!)
HTTP_CLIENT_API_KEY=your-api-key-here
HTTP_CLIENT_API_SECRET=your-api-secret-here
