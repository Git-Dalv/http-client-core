# Production Environment Configuration

HTTP_CLIENT_BASE_URL=https://api.prod.example.com
HTTP_CLIENT_TIMEOUT_CONNECT=5.0
HTTP_CLIENT_TIMEOUT_READ=10.0
HTTP_CLIENT_TIMEOUT_TOTAL=30.0

HTTP_CLIENT_RETRY_MAX_ATTEMPTS=3
HTTP_CLIENT_RETRY_BACKOFF_FACTOR=2.0
HTTP_CLIENT_RETRY_BACKOFF_JITTER=true

HTTP_CLIENT_SECURITY_VERIFY_SSL=true
HTTP_CLIENT_SECURITY_MAX_RESPONSE_SIZE=104857600

HTTP_CLIENT_LOG_LEVEL=WARNING
HTTP_CLIENT_LOG_FORMAT=json
HTTP_CLIENT_LOG_ENABLE_CONSOLE=false
HTTP_CLIENT_LOG_ENABLE_FILE=true
HTTP_CLIENT_LOG_FILE_PATH=/var/log/http_client_prod.log
HTTP_CLIENT_LOG_MAX_BYTES=10485760
HTTP_CLIENT_LOG_BACKUP_COUNT=10

# PRODUCTION SECRETS - SET IN ENVIRONMENT, NOT IN FILE!
# HTTP_CLIENT_API_KEY=
# HTTP_CLIENT_API_SECRET=
