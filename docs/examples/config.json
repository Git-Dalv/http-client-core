{
  "_comment": "Example HTTPClient configuration file (JSON format)",
  "http_client": {
    "base_url": "https://api.example.com",
    "headers": {
      "User-Agent": "MyApp/1.0",
      "Accept": "application/json"
    },
    "timeout": {
      "connect": 5,
      "read": 30,
      "total": 60
    },
    "retry": {
      "max_attempts": 3,
      "backoff_base": 0.5,
      "backoff_factor": 2.0,
      "backoff_max": 60.0,
      "backoff_jitter": true,
      "retry_on_status": [408, 429, 500, 502, 503, 504]
    },
    "pool": {
      "connections": 10,
      "maxsize": 10,
      "block": false,
      "max_redirects": 30
    },
    "security": {
      "verify_ssl": true,
      "allow_redirects": true,
      "max_response_size": 104857600,
      "max_decompressed_size": 524288000,
      "max_compression_ratio": 20.0
    },
    "circuit_breaker": {
      "enabled": false,
      "failure_threshold": 5,
      "recovery_timeout": 30.0,
      "half_open_max_calls": 3
    },
    "logging": {
      "level": "INFO",
      "format": "text",
      "enable_console": true,
      "enable_file": false,
      "enable_correlation_id": false
    }
  }
}
